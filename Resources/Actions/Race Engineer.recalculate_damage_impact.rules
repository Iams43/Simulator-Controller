; Resets the calculated damage impact for Bodywork, Suspension and Engine damage,
; thereby triggering a full recalculation.

{All: [?%activation%], {Any: [?Damage.Bodywork], [?Damage.Suspension], [?Damage.Engine]}} =>
		(Prove: resetDamage([Bodywork, Suspension, Engine])), (Clear: Damage.Analysis.Reported)

resetDamage([])
resetDamage([?damageType | ?damageTypes]) <= resetDamage(?damageType), resetDamage(?damageTypes)

resetDamage(?damageType) <= Clear(Damage, ?damageType), Clear(Damage.Repair, ?damageType, Target),
							clearDamageReferenceLaps(!Lap, ?damageType)

clearDamageReferenceLaps(0, ?) <= !
clearDamageReferenceLaps(?lap, ?damageType) <= Clear(Lap, ?lap, Damage, ?damageType, Lap.Reference),
											   ?nLap = ?lap - 1, clearDamageReferenceLaps(?nLap)
;;;-------------------------------------------------------------------------;;;
;;;                            Initialization                               ;;;
;;;-------------------------------------------------------------------------;;;
										
[?Initialize] =>    (Prove: removeSettings("Assetto Corsa", "Mazda 787B",
										   [Aero.Height.Front, Aero.Height.Rear, Electronics.TC, Electronics.ABS])),
					(Prove: addSettings("Assetto Corsa", "Mazda 787B",
										[Aero.Height.Front.Left, Aero.Height.Front.Right, 
										 Aero.Height.Rear.Left, Aero.Height.Rear.Right,
										 Differential.Coast, Differential.Power,
										 Electronics.Engine.Limiter]))